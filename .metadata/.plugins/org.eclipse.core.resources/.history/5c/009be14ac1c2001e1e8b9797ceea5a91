package crud.image;

import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.InputStream;
import javax.servlet.ServletException;
import javax.servlet.annotation.MultipartConfig;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.Part;

@WebServlet("/insertUser")
@MultipartConfig
public class InsertUser extends HttpServlet {

    protected void doPost(HttpServletRequest request, HttpServletResponse response)
            throws ServletException, IOException {
        try {
            // Retrieve file parts
            Part logoPart = request.getPart("logo");
            Part imagePart = request.getPart("image");

            // Get file names
            String logoFileName = logoPart.getSubmittedFileName();
            String imageFileName = imagePart.getSubmittedFileName();

            // Specify the upload directories on your server
            String uploadDirectoryLogo = "C:" + File.separator + "path_to_logo_directory" + File.separator + logoFileName;
            String uploadDirectoryImage = "C:" + File.separator + "path_to_image_directory" + File.separator + imageFileName;

            // Check if the files already exist, and if yes, consider renaming or handling accordingly
            File existingFileLogo = new File(uploadDirectoryLogo);
            File existingFileImage = new File(uploadDirectoryImage);
            
            if (existingFileLogo.exists() || existingFileImage.exists()) {
                // Handle the case where the files already exist
            }

            // Save logo file
            try (FileOutputStream fos = new FileOutputStream(uploadDirectoryLogo);
                 InputStream is = logoPart.getInputStream()) {

                byte[] data = new byte[is.available()];
                is.read(data);
                fos.write(data);
            }

            // Save image file
            try (FileOutputStream fos = new FileOutputStream(uploadDirectoryImage);
                 InputStream is = imagePart.getInputStream()) {

                byte[] data = new byte[is.available()];
                is.read(data);
                fos.write(data);
            }
            
            // Retrieve other form data
            String uniname = request.getParameter("uniname");
            String location = request.getParameter("location");
            String mark = request.getParameter("description");

            // Create a new User object
            User user = new User(uniname, location, mark, logoFileName, imageFileName);

            // Insert the user into the database
            UserDAO userDAO = new UserDAO();
            userDAO.insertUser(user);

            // Redirect to the user list page or any other page you desire
            response.sendRedirect("AdminLTE/pagecreate/home.jsp");
        } catch (IOException | ServletException e) {
            e.printStackTrace();
            // Handle the exception (e.g., forward to an error page)
            response.sendRedirect("error.jsp");
        }
    }
}
